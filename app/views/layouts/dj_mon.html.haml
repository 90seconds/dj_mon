!!! 5
%html
  %head{:lang => "en"}
    = stylesheet_link_tag "dj_mon", :media => "screen, projection"
    = yield :head

  %body
    %header
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            .pull-left
              = link_to "DJ Mon", dj_reports_url, class: "brand"
            .pull-right
              #dj-counts-view

    .container
      = yield

    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"
    = javascript_include_tag "dj_mon.js"

    %script#dj_counts_template{ :type=> "text/x-handlebars-template" }
      %span.badge
        {{queued}} queued
      %span.badge.badge-info
        {{active}} active
      %span.badge.badge-warning
        {{failed}} failed
