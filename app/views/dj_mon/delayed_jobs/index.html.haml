%header
  %p.lead Delayed Jobs
  .subnav
    %ul.nav.nav-tabs
      %li.active
        = link_to "All", "#all", "data-toggle" => "tab"
      %li
        = link_to "Failed", "#failed", "data-toggle" => "tab"
      %li
        = link_to "Queued", "#queued", "data-toggle" => "tab"
      %li
        = link_to "Active", "#active", "data-toggle" => "tab"

    .tab-content
      .tab-pane#all.active{ 'data-url'   => all_delayed_jobs_url }
      .tab-pane#failed{ 'data-url'=> failed_delayed_jobs_url }
      .tab-pane#active{ 'data-url'=> active_delayed_jobs_url }
      .tab-pane#queued{ 'data-url'=> queued_delayed_jobs_url }

%script#delayed_jobs_template{ :type=> "text/x-handlebars-template" }
  %table.table.table-striped#delayed-jobs-table
    %thead
      %tr
        %th
          ID
        %th
          Priority
        %th
          Attempts
        %th
          Queue
        %th
          Last Error
        %th.date
          Failed at
        %th.date
          Run at
        %th.date
          Created at
    %tbody
      {{#.}}
      %tr
        %td
          {{id}}
        %td
          {{priority}}
        %td
          {{attempts}}
        %td
          {{queue}}
        %td
          {{last_error}}
        %td.date
          {{}} {{failed_at}}
        %td.date
          {{job.run_at}}
        %td.date
          {{created_at}}
      {{/.}}
